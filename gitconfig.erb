[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
  name = Matias Grunberg
  email = matias@yellowspot.com.ar
  
[core]
  excludesfile = /home/matias/.gitignore
  editor = vim

[alias]
  co = checkout
  nff = merge --no-ff
  lg = log --oneline --decorate --all --graph

[mergetool]
  keepBackup = false

[rerere]
  enabled = 1

[push]
  default = tracking

[merge]
  tool = meld

[credential]
  helper = cache --timeout=31536000

[pull]
  rebase = true

